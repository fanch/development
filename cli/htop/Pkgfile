# Depends on: ncurses

description="an interactive process viewer"
url="http://htop.sourceforge.net/"
packager="greg <greg@nutyx.org>"
contributors="Fanch, Tnut"

name=htop
version=2.0.2
release=1



build() {
    cd $name-$version
release=1
    ./configure --prefix=/usr --disable-nls 
    make
    make DESTDIR=$PKG install
}
