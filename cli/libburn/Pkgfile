description="libburn is a library for writing preformatted data onto optical media"
url="http://icculus.org/burn/"
packager="tnut <tnut@nutyx.org>"

name=libburn
version=1.4.8
release=1


build() {
cd $name-$version
release=1
./configure --prefix=/usr --disable-static
make
make DESTDIR=$PKG install
}
