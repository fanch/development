# Depends on: libogg 

description="A free codec for free speech"
url="http://www.speex.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

name=speex
version=1.2rc2
release=1



build() {
cd $name-$version
./configure --prefix=/usr \
--disable-static \
--docdir=/usr/share/doc/speex-$version
make
make DESTDIR=$PKG install
}  
