# Depends on: sdl

description="A cross-platform networking library for SDL."
url="http://www.libsdl.org/projects/SDL_net"
packager="tnut <tnut@nutyx.org>"
contributors="Fanch"

name=sdl-net
version=1.2.8
release=1

build() {
	cd SDL_net-$version
release=1
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}
