name=xorg-glu
_name=glu
version=9.0.0
release=1

source=(ftp://ftp.freedesktop.org/pub/mesa/${_name}/${_name}-$version.tar.bz2)
release=1

build() {

cd ${_name}-$version
release=1
./configure --prefix=/usr --disable-static

make DESTDIR=$PKG install

}
