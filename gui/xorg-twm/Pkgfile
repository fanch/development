# Depends on: xorg-libxt xorg-libxmu xorg-libice xorg-libsm xorg-server 


description="The twm package contains a very minimal window manager."
url="http://xorg.freedesktop.org" 
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B, tnut, Greg"

name=xorg-twm
_name=twm
version=1.0.9
release=1

source=(system-twm-01.patch
	http://ftp.x.org/pub/individual//app/${_name}-$version.tar.bz2)
release=1

build() {

	cd ${_name}-$version
release=1
	patch -Np1 -i ../system-twm-01.patch
	sed -i -e '/^rcdir =/s,^\(rcdir = \).*,\1/etc/X11/app-defaults,' src/Makefile.in
	./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
	
	make
	make DESTDIR=$PKG install
}

