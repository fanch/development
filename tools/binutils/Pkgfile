name=binutils
version=2.25.1

source=(http://ftp.gnu.org/gnu/binutils/binutils-$version.tar.bz2)

build() {
cd $name-$version
mkdir -v build
cd build
 ../configure  \
    --prefix=/tools \
    --build=${CLFS_HOST} \
    --host=${CLFS_TARGET} \
    --target=${CLFS_TARGET} \
    --with-lib-path=/tools/lib \
    --disable-nls \
    --enable-shared \
    --disable-multilib \
    --enable-gold=yes \
    --enable-plugins \
    --enable-threads
make
make install
make -C ld clean
make -C ld LIB_PATH=/usr/lib:/lib
cp -v ld/ld-new /tools/bin
}
